if has("win32")
  set guioptions-=m "no menu bar
  set guioptions-=T "no tool bar
endif

"Anti-aliasing and font choice
set anti
set enc=utf-8
if has("win32")
  "Windows font
  set gfn=Consolas:h10
  "Zenburn colors
  let g:zenburn_high_Contrast=1
  colorscheme zenburn
else
  if has("unix")
    let s:uname = system("uname")
    if s:uname == "Darwin\n"
      "OS X font
      set gfn=Inconsolata:h18
      " Use default MacVim colours
    endif
  endif
endif

"Another good colorscheme
"colorscheme inkpot

"Size
set lines=50

