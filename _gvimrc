if OperatingSystem("windows")
  set guioptions-=m "no menu bar
  set guioptions-=T "no tool bar
elseif OperatingSystem("mac")
  set fuopt=maxvert,maxhorz,background:Normal
endif


"Anti-aliasing and font choice
set anti
set enc=utf-8
if OperatingSystem("windows")
  "Windows font
  set gfn=Consolas:h10
  "Zenburn colors
  let g:zenburn_high_Contrast=1
  colorscheme zenburn
  " Highlight tabs like EOLs (less obtrusive)
  highlight! link SpecialKey NonText
elseif OperatingSystem("mac")
  "OS X font
  set gfn=Inconsolata:h15
  colorscheme solarized
endif

"Reset my highlighting
highlight EOLWS guibg=red

"Another good colorscheme
"colorscheme inkpot

"Size
set lines=50

